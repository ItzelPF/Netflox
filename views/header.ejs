<header id="header">
    <div class="header-cont container">
        <div class="left-cont">
            <nav>
                <a href="/index"><img class="logo" src="/img/logo.png" alt="netfloxLogo" /></a>
            </nav>
            <ul class="main-nav">
                <li class="nav-item active"><a href="/contenido/<%= userId %>/<%= profileId %>">Inicio</a></li>
                <li class="nav-item"><a href="/generos/<%= userId %>/<%= profileId %>">Géneros</a></li>
                <li class="nav-item"><a href="/mi_lista/<%= userId %>/<%= profileId %>">Mi Lista</a></li>
                <li class="nav-item"><a href="/historial/<%= userId %>/<%= profileId %>">Hisotrial de Vistas</a></li>
            </ul>
        </div>
        <div class="right-cont">
            <!-- Ícono de búsqueda -->
            <input type="text" id="search-query" placeholder="Buscar películas..." class="search-input">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="search-icon" id="search-icon">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M13 11C13 13.7614 10.7614 16 8 16C5.23858 16 3 13.7614 3 11C3 8.23858 5.23858 6 8 6C10.7614 6 13 8.23858 13 11ZM14.0425 16.2431C12.5758 17.932 10.4126 19 8 19C3.58172 19 0 15.4183 0 11C0 6.58172 3.58172 3 8 3C12.4183 3 16 6.58172 16 11C16 11.9287 15.8417 12.8205 15.5507 13.6497L24.2533 18.7028L22.7468 21.2972L14.0425 16.2431Z" fill="currentColor"></path>
            </svg>

            <!-- Ícono de avatar -->
            <img src="<%= avatar %>" alt="Avatar del perfil" class="profile-avatar" id="avatar">

            <!-- Menú desplegable del avatar -->
            <div id="dropdown" class="dropdown hidden">
                <ul>
                    <li id="logout">Cerrar sesión</li>
                </ul>
                <ul>
                    <li id="deleteProfile">Eliminar perfil</li>
                </ul>
                <ul>
                    <li id="modifyProfile">Modificar perfil</li>
                </ul>
            </div>
        </div>
    </div>
</header>